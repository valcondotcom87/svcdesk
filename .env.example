# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=itsm_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Elasticsearch
ELASTICSEARCH_DSL_HOSTS=localhost:9200
ELASTICSEARCH_DSL_INDEX_PREFIX=itsm

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,gif,txt,csv

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Sentry (Error Tracking)
SENTRY_DSN=

# Application Settings
ORGANIZATION_NAME=Your Organization
SUPPORT_EMAIL=support@yourorg.com
DEFAULT_FROM_EMAIL=noreply@yourorg.com

# Active Directory / LDAP Sync (optional)
AD_SERVER_URI=ldap://ad.example.local
AD_BIND_DN=CN=itsm-sync,OU=Service Accounts,DC=example,DC=local
AD_BIND_PASSWORD=changeme
AD_SEARCH_BASE=OU=Users,DC=example,DC=local
AD_USER_FILTER=(objectClass=user)
AD_USERNAME_ATTR=sAMAccountName
AD_EMAIL_ATTR=mail
AD_FIRST_NAME_ATTR=givenName
AD_LAST_NAME_ATTR=sn
AD_DOMAIN=example.local
AD_DEFAULT_ROLE=end_user
AD_ORGANIZATION=Directory Users
AD_SYNC_ENABLED=False
AD_SYNC_CRON=0 * * * *

# Security
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
AUTH_MAX_FAILED_ATTEMPTS=5
AUTH_LOCKOUT_MINUTES=30
PASSWORD_MIN_LENGTH=12
AUDIT_LOG_ENABLED=True
AUDIT_LOG_RETENTION_DAYS=2555
LOCKOUT_NOTIFY_ADMINS=True
MFA_REQUIRED_ROLES=admin,manager
ENCRYPTION_AT_REST_ENABLED=False
FIELD_ENCRYPTION_KEY=
TLS_REQUIRED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/itsm.log
LOG_FORWARDING_ENABLED=False
LOG_FORWARDING_HOST=
LOG_FORWARDING_PORT=514
